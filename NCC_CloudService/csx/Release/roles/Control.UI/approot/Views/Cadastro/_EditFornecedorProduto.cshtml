@using Control.Model.Entities
@model ProductProvider

<div class="row">
    <div class="col-xs-12 col-sm-12">
        <div class="box">
            <form class="form-horizontal">
                <div class="box-content">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <input type="hidden" id="hdnProductProviderID" name="ProductProviderID" />
                    <div class="form-group">
                        @Html.Label("Razão Social", htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Provider.CompanyName, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(p => p.Code, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control", @type="text" } })
                            @*@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })*@
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Habilitado", htmlAttributes: new { @class = "control-label col-md-3", @style = "margin-top: -3px;" })
                        <div class="col-md-4">
                            @Html.CheckBoxFor(model => model.IsActive, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-5 col-md-10">
                        <input type="button" value="Salvar" id="btnAlterarFornecedorProduto" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div><!--box-->

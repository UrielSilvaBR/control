@{
    ViewBag.Title = "Fornecedores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div id="breadcrumb" class="col-xs-12">
        <ol class="breadcrumb">
            <li><a href="#">Cadastros</a></li>
            <li><a href="#">Fornecedores</a></li>
            @*<li><a href="#">Edição</a></li>*@
        </ol>
    </div>
</div>

<!--Teste-->
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <div class="box-name">
                    <span>Cadastro de Fornecedores</span>
                </div>
                <div class="box-icons">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="expand-link">
                        <i class="fa fa-expand"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
                <div class="no-move"></div>
            </div>
            <div class="box-content no-padding">
                <div id="table_wrapperz">
                    <table class="table table-bordered table-striped table-hover table-heading table-datatable" id="datatable-1" style="overflow: scroll !important;">
                        <thead>
                            <tr>
                                <th>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; </th>
                                
                                <th>
                                    Código
                                </th>
                                <th>
                                    Empresa
                                </th>
                                <th>
                                    Apelido
                                </th>
                                @*<th>
                                    @Html.DisplayNameFor(model => model.VendorID)
                                </th>*@
                                
                                <th>
                                    Fone
                                </th>                                
                                <th>
                                    Email
                                </th>
                                <th>
                                    Endereço
                                </th>
                                @*<th>
                                    @Html.DisplayNameFor(model => model.AddressNumber)
                                </th>
                                <th>
                                    Bairro
                                </th>*@
                                <th>
                                    Cidade
                                </th>
                                <th>
                                    Estado
                                </th>
                                <th>
                                    CEP
                                </th>
                                <th>Documento</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                {
                                    <tr>
                                        <td>
                                            <h4 style="color:red">
                                                <a href='@Url.Action("FornecedoresEdit", "Cadastro", new { FornecedorID = item.Id })'>
                                                    <i class="fa fa-edit red"></i>
                                                </a>
                                                <a href='@Url.Action("FornecedorDelete", "Cadastro", new { FornecedorID = item.Id })'>
                                                    <i class="fa fa-times-circle" style="color:#B31212"></i>

                                                </a>
                                            </h4>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Id)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CompanyName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ShortName)
                                        </td>                                        
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PhoneCode) - @Html.DisplayFor(modelItem => item.Phone)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>   

                                        <td>
                                            @Html.DisplayFor(modelItem => item.AddressStreet) , @Html.DisplayFor(modelItem => item.AddressNumber) - @Html.DisplayFor(modelItem => item.AddressDistrict)
                                        </td>                                        
                                        
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AddressCity)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AddressState)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ZipCode)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Document)
                                        </td>
                                    </tr>
                                }
                            }

                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

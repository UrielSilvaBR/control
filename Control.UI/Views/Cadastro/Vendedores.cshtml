@using Control.Model.Entities
@model IEnumerable<Vendor>

@{
    ViewBag.Title = "Vendedores";
}
<div class="row">
    <div id="breadcrumb" class="col-xs-12">
        <ol class="breadcrumb">
            <li><a href="#">Cadastros</a></li>
            <li><a href="#">Vendedores</a></li>
            @*<li><a href="#">Edição</a></li>*@
        </ol>
    </div>
</div>

<!--Teste-->
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <div class="box-name">
                    <span>Cadastro de Vendedores</span>
                </div>
                <div class="box-icons">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="expand-link">
                        <i class="fa fa-expand"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
                <div class="no-move"></div>
            </div>
            <div class="box-content no-padding">
                <div id="table_wrapperz">
                    <table class="table table-bordered table-striped table-hover table-heading table-datatable" id="datatable-1" style="overflow: scroll !important;">
                        <thead>
                            <tr>
                                <th>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; </th>
                                <th>
                                    Codigo
                                </th>
                                <th>
                                    Vendedor
                                </th>
                                <th>
                                    Comissão %
                                </th>
                                <th>
                                    Ativo
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                {
                                    <tr>
                                        <td>
                                            <h4 style="color:red">
                                                <a href='@Url.Action("VendedoresEdit", "Cadastro", new { VendedorID = item.Id })'>
                                                    <i class="fa fa-edit red"></i>
                                                </a>
                                                <a href='@Url.Action("VendedorDelete", "Cadastro", new { VendedorID = item.Id })'>
                                                    <i class="fa fa-times-circle" style="color:red"></i>

                                                </a>
                                            </h4>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Id )
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PercentCommission)
                                        </td>
                                        <td>
                                            @if (item.Active)
                                            {
                                                Html.DisplayText("Habilitado");
                                            }
                                            else
                                            {
                                                Html.DisplayText("Desabilitado");
                                            }                                            
                                        </td>                                      

                                    </tr>
                                }
                            }

                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

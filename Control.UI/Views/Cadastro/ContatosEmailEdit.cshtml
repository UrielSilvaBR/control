@using Control.Model.Entities
@model UserAdressBook
@{
    ViewBag.Title = "Contatos Email";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div id="breadcrumb" class="col-md-12">
        <ol class="breadcrumb">
            <li><a href="#">Cadastro</a></li>
            <li><a href="#">Agenda Emails</a></li>
            <li><a href="#">Editar</a></li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-xs-12 col-sm-12">
        <div class="box">
            <div class="box-header">
                <div class="box-name">
                    <i class="fa fa-pencil"></i>
                    <span>Adicionar Agenda</span>
                </div>
                <div class="box-icons">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="expand-link">
                        <i class="fa fa-expand"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>

                <div class="no-move"></div>
            </div>
            <!--Inicio-->
            @using (Html.BeginForm("ContatosEmailSave", "Cadastro", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <div class="box-content">

                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)


                    <div class="form-group">
                        @Html.Label("Nome Contato", htmlAttributes: new { @class = "control-label col-md-1" })
                        <div class="col-md-5">
                            @Html.EditorFor(model => model.MailContactName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MailContactName, "", new { @class = "text-danger" })
                        </div>
                        
                    </div>

                    <div class="form-group">
                        @Html.Label("Email", htmlAttributes: new { @class = "control-label col-md-1" })
                        <div class="col-md-5">
                            @Html.EditorFor(model => model.MailContactEmai, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MailContactEmai, "", new { @class = "text-danger" })
                        </div>
                    </div>

                 

                    <div class="form-group">
                        @Html.Label("Observação", htmlAttributes: new { @class = "control-label col-md-1" })
                        <div class="col-md-5">
                            @Html.EditorFor(model => model.MailContactDescription, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MailContactDescription, "", new { @class = "text-danger" })
                        </div>
                       
                    </div>


                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Cadastrar" class="btn btn-primary" />
                            <a href='@Url.Action("Contatos", "Cadastro")'>
                                <i class="btn btn-primary">Voltar</i>
                            </a>
                        </div>
                    </div>
                </div>

            }



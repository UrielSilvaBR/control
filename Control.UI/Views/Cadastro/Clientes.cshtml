@using Control.Model.Entities
@model IEnumerable<Customer>

@{
    ViewBag.Title = "Clientes";
    //Layout = null;
}

<div class="row">
    <div id="breadcrumb" class="col-xs-12">
        <ol class="breadcrumb">
            <li><a href="index.html">Cadastros</a></li>
            <li><a href="#">Clientes</a></li>
            @*<li><a href="#">Edição</a></li>*@
        </ol>
    </div>
</div>
<!-- Tabela Inicio-->
<div class="row">
    <div class="col-xs-12">
        <h2>Clientes</h2>
        <p>
            @Html.ActionLink("Adicionar Novo", "ClientesEdit", "Cadastro")
        </p>
        <div class="box">
            <div class="box-header">
                <div class="box-name">
                    <i class="fa fa-table"></i>
                    <span>Resultados encontrados</span>
                </div>
                <div class="box-icons">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="expand-link">
                        <i class="fa fa-expand"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
                <div class="no-move"></div>
            </div>
            <div class="box-content no-padding">
                <table class="table table-striped table-bordered table-hover table-heading no-border-bottom">
                    <thead>
                        <tr>
                            <th>
                                Cliente
                            </th>
                            <th>
                                Apelido
                            </th>
                            <th>
                                Endereço
                            </th>
                            <th>
                                Número
                            </th>
                            <th>
                                Bairro
                            </th>
                            <th>
                                Cidade
                            </th>
                            <th>
                                Estado
                            </th>
                            <th>
                                Cep
                            </th>
                            <th>
                                DDD
                            </th>
                            <th>
                                Telefone
                            </th>
                            <th>
                                Fax
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Site
                            </th>
                            <th>
                                CPF/CNPJ
                            </th>
                            @*<th>
                                @Html.DisplayNameFor(model => model.Discount)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CommercialPolicy)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.RegisterDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LastUpdate)
                            </th>*@
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CompanyName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ShortName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AddressStreet)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AddressNumber)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AddressDistrict)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AddressCity)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AddressState)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ZipCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PhoneCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Phone)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PhoneFax)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Website)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Document)
                                    </td>
                                    @*<td>
                                        @Html.DisplayFor(modelItem => item.Discount)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CommercialPolicy)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RegisterDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LastUpdate)
                                    </td>*@
                                    <td>
                                        <h4 style="color:red">
                                            <a href='@Url.Action("ClientesEdit", "Cadastro", new { ClientID = item.Id })'>
                                                <i class="fa fa-edit red"></i>
                                            </a>
                                            <a href='@Url.Action("ClienteDelete", "Cadastro", new { ClientID = item.Id })'>
                                                <i class="fa fa-times-circle" style="color:red"></i>

                                            </a>
                                        </h4> 
</td>
                                </tr>
                            }
                        }
                       
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- Tabela Fim -->
<script type="text/javascript" src="~/plugins/jquery/jquery-2.1.0.min.js"></script>
<script type="text/javascript">
    
$(document).ready(function() {
	// Drag-n-Drop feature
	WinMove();
});
</script>

@using Control.Model.Entities
@model InvoiceItem
<style type="text/css">
    .modal-footer {
        border-top: 0px solid #e5e5e5;
    }
</style>

<div id="itemNotaFiscal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content" style="margin-left: 100px;margin-right: -55px;">
            <div class="box" style="margin-bottom: 0px;">
                <div class="box-header">
                    <div class="box-name">
                        <span>Adicionar Item Nota Fiscal</span>
                        <button type="button" class="close" data-dismiss="modal" style="margin-right: 8px !important;margin-top: 4px;">&times;</button>
                    </div>
                    <div class="box-icons">
                        
                    </div>
                </div>
                <div class="box-content">
                    
                    <div class="form-group">
                        @Html.LabelFor(p => p.TotalPrice, htmlAttributes: new { @class = "col-md-1" })
                        <div class="col-md-2">
                            @Html.EditorFor(p => p.TotalPrice, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-primary" data-dismiss="modal" id="btnFechar" value="Fechar" />
                </div>
            </div>
            @*<div class="modal-header">
                    <h4 class="modal-title"></h4>
                </div>
                <div class="modal-body">
                    <p>Some text in the modal.</p>
                </div>*@
        </div>
    </div>
</div>

@using Control.Model.Entities
@model Order


<div class="row">
    <div class="col-xs-12 col-sm-12">
        <div class="box">
            <!--Inicio-->
            @using (Ajax.BeginForm("ConverterPedido", new { Controller = "Pedido" }, new AjaxOptions { OnBegin = "ValidarConvertPedidoModal", OnSuccess = "FinalizarConverterPedido" }, new { @class = "form-horizontal" }))
            {
                <div class="box-content">

                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)

                    <input type="hidden" id="hdnOrderID_ConvertPedido_Modal" name="OrderID" />

                    <div class="form-group">
                        @Html.Label("Número Pedido", htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.CustomerControlCode, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CustomerControlCode, "", new { @class = "text-danger" })
                        </div>     
                   </div>
                    <div class="form-group">
                        @Html.Label("Pedido Integral", htmlAttributes: new { @class = "control-label col-md-3" })
                        
                        <div class="col-md-8">
                           @Html.CheckBoxFor(model => model.isIntegral, new { @class = "", @style= "margin-top: 8px;"  })
                        </div>     
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-5 col-md-10">
                            <input type="submit" value="Cadastrar" class="btn btn-primary" />
                        </div>
                    </div>

                </div>
            }
        </div>

    </div><!--box-->
</div><!--row-->
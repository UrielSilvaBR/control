@using Control.Model.Entities
@model Order

<!--Inicio-->
@using (Ajax.BeginForm("ConverterPedido", "Pedido", new AjaxOptions { OnBegin = "ValidarConvertPedidoModal", OnSuccess = "FinalizarConverterPedido" }, new { @class = "form-horizontal" }))
{
    <div class="box-content">

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <input type="hidden" id="hdnOrderID_ConvertPedido_Modal" name="OrderID" />

        <div class="form-group">
            @Html.Label("Numero Pedido:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CustomerControlCode , new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CustomerControlCode, "", new { @class = "text-danger" })
            </div>

        </div>

        <br />

        <div class="form-group">
            <div class="col-md-offset-5 col-md-10">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </div>

    </div>
}
@using Control.Model.Entities
@model Order

<!--Inicio-->
@using (Ajax.BeginForm("IncluirContato", new { Controller = "Pedido" }, new AjaxOptions { OnBegin = "ValidarInclusaoContatoModal", OnSuccess = "FinalizarInclusaoContato(data)" }, new { @class = "form-horizontal" }))
{
    <div class="box-content">

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <input type="hidden" id="hdnOrderID_ConvertPedido_Modal" name="ID" />
            <div class="form-group">
                @Html.Label("Contatos:", htmlAttributes: new { @class = "control-label col-md-2" })
                <input type="text" id="txtNomeMail" name="txtNomeMail" class="form-control col-md-3"/>
                @Html.Label("Email:", htmlAttributes: new { @class = "control-label col-md-2" })
                <input type="text" id="txtEmail" name="txtEmail"  class="form-control col-md-3"/>
                @Html.Label("Descrição:", htmlAttributes: new { @class = "control-label col-md-2" })
                <input type="text" id="txtDescricao" name="txtDescricao"  class="form-control col-md-5"/>
            </div>
            <div class="form-group">

                @Html.Label("Para:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ProposalMailList, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ProposalMailList, "", new { @class = "text-danger" })
                </div>

            </div>

            <br />

            <div class="form-group">
                <div class="col-md-offset-5 col-md-10">
                    <input type="submit" value="Cadastrar" class="btn btn-primary" />
                </div>
            </div>

        </div>
}
